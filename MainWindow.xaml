<Window x:Class="ConcaveHullwNTS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcaveHullwNTS"
        mc:Ignorable="d"
        Title="Конструктор оболочки точек" Height="550" Width="800" MinHeight="500" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="MainTabControl" TabStripPlacement="Top">
            <TabItem Header="Загрузка и Настройки">
                <local:InputSettingsTab x:Name="InputSettingsTabInstance"/>
            </TabItem>

            <TabItem Header="Визуализация" x:Name="VisualizationTabItem">
                <local:VisualizationTab x:Name="VisualizationTabInstance"/>
            </TabItem>

            <TabItem Header="О программе">
                <local:AboutTab VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </TabItem>

        </TabControl>

        <!-- Строка статуса внизу окна -->
        <!-- Используем свойство VerticalAlignment="Bottom", чтобы прикрепить её к низу родительского Grid -->
        <StatusBar VerticalAlignment="Bottom" Background="LightBlue">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarTextBlock" Text="Для начала – выберите файл"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>