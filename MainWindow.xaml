<Window x:Class="ConcaveHullwNTS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcaveHullwNTS"
        mc:Ignorable="d"
        Title="Конструктор Вогнутой Оболочки" Height="550" Width="800" MinHeight="500" MinWidth="700">
    <!-- Основная сетка окна -->
    <Grid>
        <!-- Определяем только одну строку, которая будет занимать всё пространство -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основной контент (TabControl) -->
        <TabControl x:Name="MainTabControl" TabStripPlacement="Top">
            <!-- Первая вкладка: Загрузка и Настройки -->
            <TabItem Header="Загрузка и Настройки">
                <local:InputSettingsTab x:Name="InputSettingsTabInstance"/>
            </TabItem>

            <!-- Вторая вкладка: Визуализация (пока пустая, заполним позже) -->
            <TabItem Header="Визуализация">
                <Grid Background="LightGray">
                    <TextBlock Text="Вкладка визуализации. Здесь будет отображаться результат." 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Статусная строка внизу окна -->
        <!-- Используем свойство VerticalAlignment="Bottom", чтобы прикрепить её к низу родительского Grid -->
        <StatusBar VerticalAlignment="Bottom" Background="LightBlue">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarTextBlock" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>