<UserControl x:Class="ConcaveHullwNTS.InputSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ConcaveHullwNTS"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Margin="5,5,5,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1. Выбор файла -->
        <GroupBox Header="Выбор файла данных" Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FilePathTextBox" Grid.Column="0" Margin="0,0,5,0" IsReadOnly="True" Text="Выберите файл..."/>
                <Button x:Name="BrowseButton" Grid.Column="1" Content="Обзор..." Click="BrowseButton_Click" Padding="10,2"/>
            </Grid>
        </GroupBox>

        <!-- 2. Настройки формата файла -->
        <GroupBox Header="Настройки формата файла" Grid.Row="1" Margin="0,0,0,10" ToolTip="Настройки определяют распознавание загруженных данных, а также формат сохранения">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <!-- Заголовок данных -->
                    <CheckBox x:Name="HasHeaderCheckBox" Content="Файл с заголовками данных" Margin="0,5,30,0"/>
                </StackPanel>


                <!-- Разделитель -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Разделитель колонок:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DelimiterComboBox" Width="150" SelectedIndex="1" Margin="0,0,30,0">
                        <ComboBoxItem Content="Запятая (,)"/>
                        <ComboBoxItem Content="Точка с запятой (;)"/>
                        <ComboBoxItem Content="Пробел"/>
                        <ComboBoxItem Content="Табуляция"/>
                    </ComboBox>

                    <Label Content="Десятичный разделитель:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DecimalSeparatorComboBox" Width="100" SelectedIndex="0">
                        <ComboBoxItem Content="Запятая (,)"/>
                        <ComboBoxItem Content="Точка (.)"/>
                    </ComboBox>

                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 3. Настройки Concave Hull -->
        <GroupBox Header="Настройка геометрии оболочки" Grid.Row="2" Margin="0,0,0,10">
            <StackPanel>
                <!-- Тип параметра -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Параметр для построения" VerticalAlignment="Center" ToolTip="Определяет характерные размеры рёбер"/>
                    <ComboBox x:Name="ParameterTypeComboBox" Width="280" SelectedIndex="1" SelectionChanged="ParameterTypeComboBox_SelectionChanged" 
                              VerticalAlignment="Center" Margin="0,0,20,0" ToolTip="Выберите параметр, по которому строится оболочка">
                        <ComboBoxItem Content="Максимальная длина ребра" ToolTip="Чем больше, тем более выпукла оболочка"/>
                        <ComboBoxItem Content="Коэффициент максимального ребра" ToolTip="Определяет максимальную длину ребра как долю от разницы между самыми длинным и коротким ребром в триангуляции Делоне. При значении 1 получается выпуклая оболочка, при значении 0 — максимальная &quot;вогнутость&quot;."/>
                        <!-- Alpha скрыт, но оставлен для потенциального расширения -->
                        <!-- <ComboBoxItem Content="Alpha"/> -->
                    </ComboBox>
                    <!-- Значение параметра -->
                    <StackPanel Orientation="Horizontal" Margin="0,5" VerticalAlignment="Center">
                        <Label Content="Значение параметра:" />
                        <TextBox x:Name="ParameterValueTextBox" Width="100" Text="0,3" 
                                 TextChanged="ParameterValueTextBox_TextChanged" VerticalContentAlignment="Center"
                                 local:NumericInputBehavior.AllowOnlyDecimal="True" local:NumericInputBehavior.AllowNegative="False"/>
                    </StackPanel>
                </StackPanel>

                <!-- HolesAllowed (пока отверстия внутри контура не допускаем) -->
                <!--
                    <CheckBox x:Name="HolesAllowedCheckBox" Content="Разрешить отверстия" Margin="0,5" IsChecked="False"/>
                    -->
            </StackPanel>
        </GroupBox>

        <!-- 4. Кнопки управления -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Left">
            <Button x:Name="LoadPointsButton" Content="1. Загрузить точки" Margin="0,0,10,0" Padding="10,5" Click="LoadPointsButton_Click" IsEnabled="False"/>
            <Button x:Name="CalculateHullButton" Content="2. Вычислить оболочку" Margin="0,0,10,0" Padding="10,5" Click="CalculateHullButton_Click" IsEnabled="False"/>
            <Button x:Name="SaveResultButton" Content="3. Сохранить результат" Margin="0,0,10,0" Padding="10,5" Click="SaveResultButton_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- 5. Область для вывода лога/информации (опционально) -->
        <GroupBox Header="Информация" Grid.Row="4" Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="InfoTextBlock" TextWrapping="Wrap" Text="Ожидание действий пользователя..."/>
            </ScrollViewer>
        </GroupBox>

    </Grid>
</UserControl>